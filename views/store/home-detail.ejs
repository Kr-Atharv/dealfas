<%- include('../partials/head') %>
  </head>
  <body>
      <%- include('../partials/nav') %>
      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
          <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
              Details of <%= home.houseName %>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div class="rounded-lg overflow-hidden space-y-4">
                  <img src="<%= home.photoUrl %>" alt="<%= home.houseName %>" class="w-full h-96 object-cover">
                  <% if (home.galleryImages && home.galleryImages.length > 0) { %>
                    <h3 class="text-xl font-semibold mt-4 mb-2">Gallery</h3>
                    <div class="grid grid-cols-2 gap-4">
                      <% home.galleryImages.forEach(function(img) { %>
                        <div class="border rounded-lg overflow-hidden">
                          <a href="<%= img %>" download>
                            <img src="<%= img %>" alt="Gallery image" class="w-full h-32 object-cover">
                          </a>
                        </div>
                      <% }) %>
                    </div>
                  <% } %>
              </div>
              
              <div class="space-y-6">
                  <div class="border-b pb-4">
                      <h3 class="text-2xl font-semibold mb-2">Description</h3>
                      <p class="text-gray-600"><%= home.description %></p>
                  </div>

                  <div class="border-b pb-4">
                      <h3 class="text-2xl font-semibold mb-2">Seller Name</h3>
                      <p class="text-gray-600"><%= home.location %></p>
                  </div>
                  
                  <div class="border-b pb-4">
                      <h3 class="text-2xl font-semibold mb-2">Price</h3>
                      <p class="text-green-600 text-xl font-bold">$<%= home.price %> / piece</p>
                  </div>
                  
                  <div class="border-b pb-4">
                      <h3 class="text-2xl font-semibold mb-2">Rating</h3>
                      <div class="flex items-center">
                          <span class="text-lg"><%= home.rating %> / 5</span>
                      </div>
                  </div>
                  <div class="mt-2">
                    <%- include('../partials/favourite', { home: home }) %>
                  </div>
                  <form action="/orders" method="POST" class="mt-4">
                    <input type="hidden" name="homeId" value="<%= home._id %>" />
                     <button class="bg-red-300 p-2" type="submit">Remove from favourite</button>
                  </form>
              </div>
          </div>
      </main>
  </body>
</html>